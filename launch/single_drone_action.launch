<?xml version="1.0"?>
<launch>
	<arg name="tello_ip" default="192.168.10.1" />
	<arg name="tello_cmd_server_port"	default="8889" />
	<arg name="local_cmd_client_port"	default="8890" />
	<arg name="local_vid_server_port"	default="6038" />
	<arg name="camera_calibration"		default="$(find tello_driver)/cfg/960x720.yaml" />   
	
	<group ns="tello">

		<node pkg="load_transport" name="perception" type="perception.py" output="screen" if="$(arg is_perception)" args="tello">
			<param name="ap_id" value="$(arg ap_id)" />
		</node>

		<node pkg="load_transport" name="action" type="action.py" output="screen" if="$(arg is_action)" args="tello">
		</node>

		<node pkg="rosbag" type="record" name="recorder" output="screen" if="$(arg is_record)" args="
		record -o $(arg dir_ns)/$(arg bag_name).bag 
		/tello/cmd_vel 
		/tello/land 
		/tello/manual_takeoff 
		/tello/camera/camera_info 
		/tello/camera/image_raw 
		/tello/imu 
		/tello/odom 
		/tello/status 
		/tello/payload 
		/tello/P_b
		"/>
	</group>

</launch>
